@model Eurekabank_Cliente_Dotnet_Rest_G5.Models.LoginModel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eureka Bank - Iniciar Sesión</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(to right, #6a11cb, #2575fc);
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-box {
            background: white;
            padding: 40px;
            border-radius: 10px;
            width: 100%;
            max-width: 600px;
            margin: 40px auto;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .form-header {
            text-align: center;
            margin-bottom: 20px;
        }

        .logo {
            width: 200px;
            height: auto;
            margin-bottom: 10px;
            border-radius: 10px;
        }

        h2 {
            text-align: center;
            margin-bottom: 24px;
            color: #333;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 12px;
            margin-bottom: 16px;
            border: 1px solid #ccc;
            border-radius: 8px;
            box-sizing: border-box;
        }

        button {
            width: 100%;
            padding: 12px;
            background-color: #6a11cb;
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            cursor: pointer;
        }

            button:hover {
                background-color: #5011a1;
            }

        .mensaje {
            text-align: center;
            margin-top: 10px;
            font-weight: bold;
        }

        .error {
            color: red;
        }

        .institucion {
            text-align: center;
            margin-top: 15px;
            font-size: 0.85em;
            color: #999;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <div class="form-header">
            <img src="~/imagenes/monster2.jpg" alt="Logo" class="logo" />
            <h2>Bienvenido a Eureka Bank</h2>
        </div>

        <form method="post" action="/Login/Login">
            <input type="text" name="Username" placeholder="Usuario" required />
            <input type="password" name="PasswordHash" placeholder="Contraseña" required />
            <button type="submit">Ingresar</button>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="mensaje error">
                @ViewBag.ErrorMessage
            </div>
        }

        <div class="institucion">
            Universidad de las Fuerzas Armadas ESPE
        </div>
    </div>
</body>
</html>
