@{
    ViewData["Title"] = "Realizar Retiro";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eureka Bank - Realizar Retiro</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(to right, #6a11cb, #2575fc);
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .retiro-box {
            background: white;
            padding: 40px;
            border-radius: 10px;
            width: 100%;
            max-width: 600px;
            margin: 40px auto;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .form-header {
            text-align: center;
            margin-bottom: 20px;
        }

        .logo {
            width: 200px;
            height: auto;
            margin-bottom: 10px;
            border-radius: 10px;
        }

        h2 {
            text-align: center;
            margin-bottom: 24px;
            color: #333;
        }

        input[type="text"],
        input[type="number"] {
            width: 100%;
            padding: 12px;
            margin-bottom: 16px;
            border: 1px solid #ccc;
            border-radius: 8px;
            box-sizing: border-box;
        }

        button {
            width: 100%;
            padding: 12px;
            background-color: #6a11cb;
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            cursor: pointer;
        }

            button:hover {
                background-color: #5011a1;
            }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        .modal-content {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            text-align: center;
            width: 300px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .modal h2 {
            color: #333;
            margin-top: 20px;
        }

        .modal button {
            background-color: #6a11cb;
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            margin-top: 20px;
        }

            .modal button:hover {
                background-color: #5011a1;
            }

        .checkmark-circle {
            display: inline-block;
            width: 60px;
            height: 60px;
            background-color: #ffd700;
            border-radius: 50%;
            position: relative;
        }

            .checkmark-circle::after {
                content: "✔";
                font-size: 32px;
                color: #003e7e;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }

        .institucion {
            text-align: center;
            margin-top: 15px;
            font-size: 0.85em;
            color: #999;
        }
    </style>
</head>
<body>
    <div class="retiro-box">
        <div class="form-header">
            <img src="~/imagenes/monster2.jpg" alt="Logo" class="logo" />
            <h2>Realizar Retiro</h2>
        </div>

        <form id="withdrawForm" method="post" action="/Home/Retiro" onsubmit="return handleWithdraw(event)">
            <input type="text" id="cuentaNumero" name="cuentaNumero" placeholder="Número de Cuenta" required>
            <input type="number" id="valor" name="valor" placeholder="Cantidad a Retirar" min="0.01" step="0.01" required>
            <button type="submit">Retirar</button>
        </form>
    </div>

    <div class="modal" id="modal">
        <div class="modal-content">
            <div class="checkmark-circle"></div>
            <h2>Retiro registrado exitosamente</h2>
            <button onclick="goToMenu()">Aceptar</button>
        </div>
    </div>

    <script>
        async function handleWithdraw(event) {
            event.preventDefault();
            const form = document.getElementById('withdrawForm');
            const formData = new FormData(form);

            try {
                const response = await fetch(form.action, {
                    method: 'POST',
                    body: formData,
                });

                if (response.ok) {
                    showModal();
                } else {
                    alert('Error al realizar el retiro. Por favor, inténtelo nuevamente.');
                }
            } catch (error) {
                alert('Error al conectar con el servidor.');
                console.error('Error:', error);
            }
        }

        function showModal() {
            document.getElementById('modal').style.display = 'flex';
        }

        function goToMenu() {
            window.location.href = '/Home/Index';
        }
    </script>
</body>
</html>
