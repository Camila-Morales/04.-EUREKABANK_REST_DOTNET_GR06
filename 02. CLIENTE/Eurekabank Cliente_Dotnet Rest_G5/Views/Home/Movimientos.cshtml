@{
    ViewData["Title"] = "Consulta de Movimientos";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eureka Bank - Consulta de Movimientos</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(to right, #6a11cb, #2575fc);
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .consulta-box {
            background: white;
            padding: 40px;
            border-radius: 10px;
            width: 100%;
            max-width: 800px;
            margin: 40px auto;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            box-sizing: border-box;
        }

        .form-header {
            text-align: center;
            margin-bottom: 20px;
        }

        .logo {
            width: 200px;
            height: auto;
            margin-bottom: 10px;
            border-radius: 10px;
        }

        h2 {
            text-align: center;
            margin-bottom: 24px;
            color: #333;
        }

        input[type="text"] {
            width: 100%;
            padding: 12px;
            margin-bottom: 16px;
            border: 1px solid #ccc;
            border-radius: 8px;
            box-sizing: border-box;
        }

        button {
            width: 100%;
            padding: 12px;
            background-color: #6a11cb;
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            cursor: pointer;
        }

            button:hover {
                background-color: #5011a1;
            }

        .saldo {
            text-align: left;
            font-weight: bold;
            color: #333;
            margin-top: 20px;
        }

        .table-container {
            max-height: 300px;
            overflow-y: auto;
            margin-top: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #6a11cb;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        .mensaje {
            text-align: center;
            margin-top: 10px;
            font-weight: bold;
            color: red;
        }

        .institucion {
            text-align: center;
            margin-top: 15px;
            font-size: 0.85em;
            color: #999;
        }
    </style>
</head>
<body>
    <div class="consulta-box">
        <div class="form-header">
            <img src="~/imagenes/monster2.jpg" alt="Logo" class="logo" />
            <h2>Consulta de Movimientos</h2>
        </div>

        <form method="get" action="/Home/Movimientos">
            <input type="text" name="cuentaNumero" placeholder="Número de cuenta" value="@ViewBag.NumeroCuenta" required />
            <button type="submit">Consultar</button>
        </form>

        @if (ViewBag.Resultado != null)
        {
            <p class="saldo">
                Saldo actual: @ViewBag.SaldoActual
            </p>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Tipo</th>
                            <th>Monto</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < ViewBag.Resultado.Count; i++)
                        {
                            var movimiento = ViewBag.Resultado[i];
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@movimiento.TipoMovimiento</td>
                                <td>@movimiento.MovValor.ToString("F2")</td>
                                <td>@movimiento.MovFecha</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="mensaje">@ViewBag.Error</div>
        }

    </div>
</body>
</html>
