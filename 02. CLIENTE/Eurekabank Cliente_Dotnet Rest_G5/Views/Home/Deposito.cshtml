@{
    ViewData["Title"] = "Registrar Depósito";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrar Depósito</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            background: linear-gradient(to right, #6a11cb, #2575fc);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .deposit-container {
            background-color: white;
            border-radius: 10px;
            padding: 40px 30px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 500px;
            text-align: center;
        }

        h1 {
            color: #333;
            font-size: 28px;
            margin-bottom: 30px;
        }

        input[type="text"],
        input[type="number"] {
            width: 100%;
            padding: 14px;
            font-size: 16px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
        }

        button {
            background-color: #6a11cb;
            color: white;
            padding: 12px 30px;
            font-size: 16px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #5011a1;
            }

        /* Modal de confirmación */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        .modal-content {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            text-align: center;
            width: 300px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .modal h2 {
            color: #333;
            margin-top: 20px;
        }

        .modal button {
            background-color: #6a11cb;
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 20px;
        }

            .modal button:hover {
                background-color: #5011a1;
            }

        .checkmark-circle {
            display: inline-block;
            width: 60px;
            height: 60px;
            background-color: #ffd700;
            border-radius: 50%;
            position: relative;
        }

            .checkmark-circle::after {
                content: "✔";
                font-size: 32px;
                color: #003e7e;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }
    </style>
</head>
<body>

    <div class="deposit-container">
        <h1>Registrar Depósito</h1>

        <form id="depositForm" method="post" action="/Home/Deposito" onsubmit="return handleDeposit(event)">
            <input type="text" id="cuentaNumero" name="cuentaNumero" placeholder="Número de Cuenta" required>
            <input type="number" id="valor" name="valor" placeholder="Cantidad a Depositar" min="0.01" step="0.01" required>
            <button type="submit">Depositar</button>
        </form>
    </div>

    <!-- Modal de confirmación -->
    <div class="modal" id="modal">
        <div class="modal-content">
            <div class="checkmark-circle"></div>
            <h2>Depósito registrado exitosamente</h2>
            <button onclick="goToMenu()">Aceptar</button>
        </div>
    </div>

    <script>
        async function handleDeposit(event) {
            event.preventDefault();
            const form = document.getElementById('depositForm');
            const formData = new FormData(form);

            try {
                const response = await fetch(form.action, {
                    method: 'POST',
                    body: formData,
                });

                if (response.ok) {
                    showModal();
                } else {
                    alert('Error al realizar el depósito. Por favor, inténtelo nuevamente.');
                }
            } catch (error) {
                alert('Error al conectar con el servidor.');
                console.error('Error:', error);
            }
        }

        function showModal() {
            document.getElementById('modal').style.display = 'flex';
        }

        function goToMenu() {
            window.location.href = '/Home/Index';
        }
    </script>
</body>
</html>
