<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_white_box"
    android:padding="24dp"
    android:gravity="center"
    android:elevation="8dp">

    <!-- Círculo amarillo con check azul -->
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle_yellow"
        android:gravity="center">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_check_blue" />
    </LinearLayout>

    <!-- Mensaje de éxito -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operación registrada exitosamente"
        android:textColor="#003E7E"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Botón para cerrar el cuadro flotante -->
    <Button
        android:id="@+id/btnDialogMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:backgroundTint="#003E7E"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="10dp" />
</LinearLayout>
